<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="mainViewModel"
    type="com.ksa.foody.viewmodel.MainViewModel" />
        <variable
            name="mAdapter"
            type="com.ksa.foody.adapters.FavouriteRecipesAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragmentBackgroundColor"
        tools:context=".ui.fragments.FavRecipeFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fav_recipes_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            setVisibility="@{mainViewModel.readFavRecipes}"
            setData="@{mAdapter}"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/no_data_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            setVisibility="@{mainViewModel.readFavRecipes}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="0.5"
            android:visibility="invisible"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_menu_book" />

        <TextView
            android:id="@+id/no_data_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            setVisibility="@{mainViewModel.readFavRecipes}"
            android:alpha="0.5"
            android:visibility="invisible"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/no_favourite_recipes"
            app:layout_constraintEnd_toEndOf="@+id/no_data_imageView"
            app:layout_constraintStart_toStartOf="@+id/no_data_imageView"
            app:layout_constraintTop_toBottomOf="@+id/no_data_imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
